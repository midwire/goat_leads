{
  "name": "app",
  "private": true,
  "devDependencies": {
    "cross-env": "^7.0.3",
    "esbuild": "^0.25.0"
  },
  "scripts": {
    "build": "esbuild app/javascript/*.* --bundle --sourcemap --format=esm --outdir=app/assets/builds --public-path=/assets",
    "build:css:compile": "sass ./app/assets/stylesheets/$WHITELABEL.bootstrap.scss:./app/assets/builds/$WHITELABEL.css --no-source-map --load-path=node_modules",
    "build:css:prefix": "postcss ./app/assets/builds/$WHITELABEL.css --use=autoprefixer --output=./app/assets/builds/$WHITELABEL.css",
    "build:css": "yarn build:css:compile && yarn build:css:prefix",
    "watch:css": "nodemon --watch ./app/assets/stylesheets/ --ext scss --exec \"yarn build:css\""
  },
  "dependencies": {
    "@hotwired/stimulus": "^3.2.2",
    "@hotwired/turbo-rails": "^8.0.12",
    "@popperjs/core": "^2.11.8",
    "autoprefixer": "^10.4.20",
    "bootstrap": "^5.3.3",
    "bootstrap-icons": "^1.11.3",
    "bootswatch": "^5.3.3",
    "datatables.net": "^2.2.2",
    "datatables.net-bs": "^2.2.2",
    "datatables.net-buttons": "^3.2.2",
    "datatables.net-buttons-bs": "^3.2.2",
    "datatables.net-fixedcolumns-bs": "^5.0.4",
    "datatables.net-fixedheader-bs": "^4.0.1",
    "datatables.net-responsive": "^3.0.4",
    "datatables.net-responsive-bs": "^3.0.4",
    "datatables.net-scroller-bs": "^2.4.3",
    "datatables.net-select": "^3.0.0",
    "datatables.net-select-bs": "^3.0.0",
    "jquery": "^3.7.1",
    "nodemon": "^3.1.9",
    "postcss": "^8.5.3",
    "postcss-cli": "^11.0.0",
    "sass": "^1.85.1"
  },
  "browserslist": [
    "defaults"
  ]
}
