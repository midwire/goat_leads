.container-fluid.needs-datatables
  %h1.title
    Admin Users

%table#users-datatable.table.table-hover{'data-source' => datatable_admin_users_path(format: :json)}
  %thead
    %tr
      %th{scope: 'col'} ID
      %th{scope: 'col'} First Name
      %th{scope: 'col'} Last Name
      %th{scope: 'col'} Email
      %th{scope: 'col'} Role
      %th{scope: 'col'} Phone
      %th{scope: 'col'} Status
      %th{scope: 'col'} Last Lead Delivered
      %th{scope: 'col'} Last Activity
  %tbody

#user_id{data: {token: Current.user&.id&.to_s}}
#csrf_token{data: {token: form_authenticity_token}}

:javascript

  document.addEventListener("turbo:load", function() {

    var token = $('#csrf_token').data('token');
    var uid = $('#user_id').data('token');

    $('#users-datatable').dataTable({
      processing: true,
      serverSide: true,
      stateSave: true,
      scrollX: true,
      scrollXInner: "110%",
      bScrollCollapse: true,
      bDestroy: true,

      ajax: {
        url: $('#users-datatable').data('source'),
        type: 'POST',
        data: {
          authenticity_token: token,
          user_id: uid
        }
      },
      pagingType: "full_numbers",
      columns: [
        {data: "id"},
        {data: "first_name"},
        {data: "last_name"},
        {data: "email_address"},
        {data: "role"},
        {data: "phone"},
        {data: "status"},
        {data: "last_lead_delivered_at"},
        {data: "last_activity"},
      ]
    });

  });

