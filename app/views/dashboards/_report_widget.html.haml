.card.rounded-3.shadow-sm.h-100.w-100.d-flex.flex-column
  .card-body.flex-grow-1
    .card-title
      %h3.mt-0
        = title
    %p.card-text
      - data.each do |key, value|
        .row
          .col.md-6
            = key
          .col.md-6
            = value
  .card-footer.justify-content-center.text-center
    %span More Info
    %i.bi.bi-link-45deg

